<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="72dp"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/iv"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_marginRight="@dimen/normal_space"
            android:src="@mipmap/miku"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_month"
            android:text=""
            android:textColor="@color/text_color_primary_light"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/rl"
        android:numColumns="7"
        android:padding="@dimen/normal_space"
        android:layout_toLeftOf="@id/rl" />
    <TextView
        android:id="@+id/tv_year"
        android:alpha="0.1"
        android:textSize="68sp"
        android:textColor="@color/text_color_disable_dark"
        android:text=""
        android:paddingEnd="72dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>